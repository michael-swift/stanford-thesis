	pmid = {11489955},
	pmcid = {PMC2193461},
}

@article{kuwahara_germinal_2001,
	title = {Germinal center-associated nuclear protein ({GANP}) has a phosphorylation-dependent {DNA}-primase activity that is up-regulated in germinal center regions.},
	volume = {98},
	url = {http://dx.doi.org/10.1073/pnas.181335698},
